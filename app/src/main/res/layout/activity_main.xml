<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tobias.garritsen_pset4_todo.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="To do"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#AACCEB"
        android:id="@+id/todoText"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/todoText">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/todoText"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#805462"
        android:id="@+id/doneText"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doneText"
        android:layout_above="@+id/toDo"
        android:layout_toRightOf="@+id/todoText"
        android:id="@+id/doneView"></ListView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button1"
        android:hint="What do you have to do?"
        android:id="@+id/toDo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Add"
        android:onClick="addToDo"
        android:id="@+id/button1"/>


</RelativeLayout>
